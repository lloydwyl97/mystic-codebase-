# ===== BACKEND BASE IMAGE - FOR BACKEND SERVICES ONLY =====
FROM mystic_base:latest

# Install backend-specific dependencies (without heavy ML)
COPY backend/requirements-light.txt .
RUN pip install --no-cache-dir -r requirements-light.txt

# Create backend-specific directories
RUN mkdir -p /app/endpoints /app/services /app/utils /app/models /app/data

# Set backend-specific environment
ENV SERVICE_TYPE=backend 