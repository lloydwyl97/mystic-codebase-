"""
🤖 AI INTELLIGENCE HUB - Strategies, predictions, analytics, auto-retrain
Consolidated AI operations with smart navigation
"""

import streamlit as st

# Import our modular components
from ..components.common_utils import (
    render_page_header,
)

# Import the real, full-featured page functions
from ..pages.ai_analytics.ai_analytics import render_ai_analytics_page
from ..pages.ai_analytics.ai_predictions import render_ai_predictions_page
from ..pages.ai_analytics.ai_strategies import render_ai_strategies_page
from ..pages.ai_analytics.auto_retrain import render_auto_retrain_page
from ..pages.ai_analytics.performance_report import (
    render_ai_performance_report_page,
)
from ..pages.ai_analytics.backtest_analysis import render_backtest_analysis_page


def render_ai_intelligence_hub():
    """Display AI intelligence hub with consolidated AI operations"""

    # Page header
    render_page_header(
        "🤖 AI Intelligence Hub",
        "Strategies, predictions, analytics, and auto-retrain",
    )

    # AI section navigation
    st.subheader("🧠 AI Operations")

    ai_sections = {
        "📊 AI Analytics": "ai_analytics",
        "🎯 AI Predictions": "ai_predictions",
        "🤖 AI Strategies": "ai_strategies",
        "🔄 Auto Retrain": "auto_retrain",
        "📈 Performance Report": "performance_report",
        "🧪 Backtest Analysis": "backtest_analysis",
    }

    # Create tabs for different AI sections
    selected_section = st.selectbox(
        "Select AI Section:", list(ai_sections.keys()), index=0, key="ai_intelligence_section"
    )

    # Render selected section using the real, full-featured page functions
    if selected_section == "📊 AI Analytics":
        render_ai_analytics_page()
    elif selected_section == "🎯 AI Predictions":
        render_ai_predictions_page()
    elif selected_section == "🤖 AI Strategies":
        render_ai_strategies_page()
    elif selected_section == "🔄 Auto Retrain":
        render_auto_retrain_page()
    elif selected_section == "📈 Performance Report":
        render_ai_performance_report_page()
    elif selected_section == "🧪 Backtest Analysis":
        render_backtest_analysis_page()
